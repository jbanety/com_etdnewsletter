<?xml version="1.0" encoding="utf-8"?>
<form>

	<fields name="filter">

		<field
			name="search"
			type="text"
			label="COM_ETDNEWSLETTER_FILTER_SEARCH_LABEL"
			description="COM_ETDNEWSLETTER_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

	</fields>

	<fields name="list">

		<field
			name="fullordering"
			type="list"
			label="COM_ETDNEWSLETTER_LIST_FULL_ORDERING"
			description="COM_ETDNEWSLETTER_LIST_FULL_ORDERING_DESC"
			default="a.name ASC"
			onchange="this.form.submit();"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="name ASC">COM_ETDNEWSLETTER_FIELD_NAME_LABEL_ASC</option>
			<option value="name DESC">COM_ETDNEWSLETTER_FIELD_NAME_LABEL_DESC</option>
			<option value="a.email ASC">COM_ETDNEWSLETTER_FIELD_EMAIL_LABEL_ASC</option>
			<option value="a.email DESC">COM_ETDNEWSLETTER_FIELD_EMAIL_LABEL_DESC</option>
			<option value="a.created ASC">COM_ETDNEWSLETTER_FIELD_CREATED_LABEL_ASC</option>
			<option value="a.created DESC">COM_ETDNEWSLETTER_FIELD_CREATED_LABEL_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="COM_ETDNEWSLETTER_LIST_LIMIT"
			description="COM_ETDNEWSLETTER_LIST_LIMIT_DESC"
			default="25"
			class="input-mini"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
